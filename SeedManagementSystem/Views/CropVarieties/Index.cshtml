@model IEnumerable<SeedManagementSystem.Models.CropVariety>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pull-right">
    <button class="btn btn-success" onclick="location.href='@Url.Action("Create", "CropVarieties")';return false;">Add</button>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Crop.CropName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VarietyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Crop.CropName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VarietyName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
