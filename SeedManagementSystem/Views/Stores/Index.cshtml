@model IEnumerable<SeedManagementSystem.Models.Store>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pull-right">
    <button class="btn btn-success" onclick="location.href='@Url.Action("Create", "Stores")';return false;">Add</button>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CropVariety.VarietyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoofBags)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CropVariety.VarietyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoofBags)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
